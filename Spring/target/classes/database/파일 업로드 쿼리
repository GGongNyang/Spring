===== 파일 업로드 create table =====
CREATE TABLE SPR_FILE(
    FNO NUMBER PRIMARY KEY,
    BNO NUMBER NOT NULL,
    ORIGINAL_FILE_NAME VARCHAR2(260 BYTE) NOT NULL,
    STORED_FILE_NAME VARCHAR2(36 BYTE) NOT NULL,
    FILE_SIZE NUMBER,
    CREA_DTM DATE DEFAULT SYSDATE NOT NULL,
    CREA_ID VARCHAR2(30 BYTE) NOT NULL,
    DEL_GB VARCHAR2(1 BYTE) DEFAULT 'N' NOT NULL
)

===== 컬럼들 설명 =====
COMMENT ON TABLE SPR_FILE IS '파일 업로드';
COMMENT ON COLUMN SPR_FILE.FNO IS '파일 번호';
COMMENT ON COLUMN SPR_FILE.ORIGINAL_FILE_NAME IS '원본 파일명';
COMMENT ON COLUMN SPR_FILE.STORED_FILE_NAME IS '랜덤문자+파일명';
COMMENT ON COLUMN SPR_FILE.FILE_SIZE IS '파일 크기';
COMMENT ON COLUMN SPR_FILE.CREA_DTM IS '';
COMMENT ON COLUMN SPR_FILE.CREA_ID IS '파일 올린 사람';
COMMENT ON COLUMN SPR_FILE.DEL_GB IS '삭제 여부';

===== FNO 시퀀스 =====
CREATE SEQUENCE SEQ_SPR_FILE_FNO
    START WITH 1
    INCREMENT BY 1
    NOMAXVALUE
    NOCACHE;